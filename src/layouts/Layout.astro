---
import '../styles/global.css';
import { SOCIAL_CONFIG } from '../types/settings.ts';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Batool',
  description = '你的个人工具索引站 —— 快速搜索、一键直达，所有工具尽在掌握。'
} = Astro.props;

// 安全地构建 canonical URL
const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : new URL(Astro.url.pathname, 'http://localhost:4321');
---

<!doctype html>
<html lang="zh-CN" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon-16x16.ico" sizes="16x16" />
    <link rel="icon" type="image/png" href="/favicon-32x32.ico" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <meta name="apple-mobile-web-app-title" content="Batool" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO 元标签 -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="工具索引,工具导航,开发者工具,AI工具" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={SOCIAL_CONFIG.TITLE}>
    <meta property="og:description" content="为行动者设计的工具入口。极速搜索，一键直达官网。">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://batool.vercel.app">
    <meta property="og:image" content="https://batool.vercel.app/og.png">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Batool – 直达，即专注。">
    <meta name="twitter:description" content="为行动者设计的工具入口。极速搜索，一键直达官网。">

    <!-- 主题颜色 -->
    <meta name="theme-color" content="#6366f1" />

    <!-- 内联脚本:防止主题闪烁 - 在页面渲染前立即执行 -->
    <script is:inline>
      (function() {
        try {
          const theme = localStorage.getItem('theme') || 'light';
          document.documentElement.setAttribute('data-theme', theme);
        } catch (e) {
          document.documentElement.setAttribute('data-theme', 'light');
        }
      })();
    </script>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
