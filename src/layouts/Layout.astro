---
import '../styles/global.css';
import { APP_CONFIG, getFullUrl } from '../types/settings.ts';

interface Props {
  lang?: string;
  title?: string;
  description?: string;
  socialTitle?: string;
  socialDescription?: string;
  themeColor?: string;
  theme?: string;
}

const {
  lang = APP_CONFIG.APP_LANG,
  title = APP_CONFIG.APP_TITLE,
  description = APP_CONFIG.APP_DESCRIPTION,
  socialTitle = APP_CONFIG.SOCIAL_TITLE || title,
  socialDescription = APP_CONFIG.SOCIAL_DESCRIPTION || description,
  themeColor = APP_CONFIG.THEME_COLOR,
  theme = APP_CONFIG.DEFAULT_THEME || 'light',
} = Astro.props;
---

<!doctype html>
<html lang={lang} data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="apple-mobile-web-app-title" content={APP_CONFIG.APP_NAME} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO 元标签 -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={socialTitle} />
    <meta property="og:description" content={socialDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={getFullUrl()} />
    <meta property="og:image" content="/og-image.jpg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={socialTitle} />
    <meta name="twitter:description" content={socialDescription} />

    <!-- 主题颜色 -->
    <meta name="theme-color" content={themeColor} />

    <!-- 内联脚本:防止主题闪烁 - 在页面渲染前立即执行 -->
    <script is:inline define:vars={{ DEFAULT_THEME: theme }}>
      (function () {
        try {
          const theme = localStorage.getItem('theme') || DEFAULT_THEME;
          document.documentElement.setAttribute('data-theme', theme);
        } catch (e) {
          document.documentElement.setAttribute('data-theme', DEFAULT_THEME);
        }
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
