---
interface Props {
  message?: string;
  description?: string;
}

const { message = '未找到匹配的工具', description = '尝试调整搜索词或选择其他分类' } = Astro.props;
---

<!-- 空状态 - Linear 风格：精致简洁 -->
<div id="empty-state" class="hidden text-center py-20 sm:py-24">
  <div class="mb-6 inline-flex">
    <svg class="w-12 h-12 text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  </div>
  <h3 class="text-base font-medium mb-2 text-base-content/40">{message}</h3>
  <p class="text-base-content/30 text-sm">{description}</p>
</div>