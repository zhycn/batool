---
interface Props {
  message?: string;
  description?: string;
}

const {
  message = "没有找到匹配的工具",
  description = "尝试调整搜索词或选择其他分类",
} = Astro.props as Props;
---

<!--
  空状态组件
  - 统一内边距为 6 单位
  - 支持可访问性
-->
<div
  id="empty-state"
  role="status"
  aria-live="polite"
  class="hidden text-center py-16 sm:py-24 lg:py-32"
>
  <div class="mb-6 inline-flex text-base-content/50">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-10 h-10 sm:w-12 sm:h-12"
      focusable="false"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
      ></path>
    </svg>
  </div>
  <h2 class="text-lg font-medium mb-2 text-base-content/80">{message}</h2>
  <p class="text-base-content/50 text-sm">{description}</p>
</div>
