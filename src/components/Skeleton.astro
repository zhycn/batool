---
interface Props {
  count?: number;
}
const { count = 12 } = Astro.props;
---

<div
  id="skeleton-state"
  aria-hidden="true"
  class="grid grid-cols-1 gap-3 sm:gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
>
  {
    Array.from({ length: count }).map(() => (
      <div class="skeleton bg-base-200 rounded-full p-3 sm:p-4 min-h-12 flex items-center justify-between">
        <div class="flex min-w-0 flex-1 items-center gap-2 sm:gap-3">
          <div class="skeleton h-5 w-5 shrink-0 rounded-full sm:h-6 sm:w-6" />
          <div class="skeleton h-4 w-1/2 max-w-xs rounded-md" />
        </div>
        <div class="skeleton h-5 w-16 shrink-0 rounded-full" />
      </div>
    ))
  }
</div>
