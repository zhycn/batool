---
const { size = 24 } = Astro.props;
---

<!-- Safari 兼容性修复 -->
<style>
  /* 隐藏 checkbox - Safari 兼容 */
  .theme-controller {
    appearance: none;
    -webkit-appearance: none;
    position: absolute;
    width: 0;
    height: 0;
    opacity: 0;
    pointer-events: none;
  }

  /* swap 图标切换 - Safari 兼容 */
  .swap input:checked ~ .swap-on,
  .swap input:not(:checked) ~ .swap-off {
    display: flex;
  }

  .swap input:checked ~ .swap-off,
  .swap input:not(:checked) ~ .swap-on {
    display: none;
  }
</style>

<!-- 主题切换按钮 - DaisyUI Swap 组件 -->
<label class="swap swap-rotate hover:text-base-content/70 transition-colors duration-200" aria-label="切换明暗主题">
  <!-- checkbox 用于控制图标切换 -->
  <input type="checkbox" class="theme-controller" onchange="toggleTheme()" />

  <!-- 太阳图标 - 当 checkbox 选中时显示（dark 模式） -->
  <svg
    class="swap-on fill-current"
    width={size}
    height={size}
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24">
    <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
  </svg>

  <!-- 月亮图标 - 当 checkbox 未选中时显示（light 模式） -->
  <svg
    class="swap-off fill-current"
    width={size}
    height={size}
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24">
    <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
  </svg>
</label>

<script>
  // 同步 checkbox 状态与当前主题
  function syncCheckboxState() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const checkbox = document.querySelector('.theme-controller') as HTMLInputElement;

    if (checkbox) {
      // dark 模式时 checkbox 应该被选中
      const shouldBeChecked = currentTheme === 'dark';
      if (checkbox.checked !== shouldBeChecked) {
        checkbox.checked = shouldBeChecked;
      }
    }
  }

  // 页面加载时立即同步
  syncCheckboxState();

  // DOM 加载完成后再次确认
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', syncCheckboxState);
  }

  // 监听主题变化，保持 checkbox 状态同步
  const observer = new MutationObserver(syncCheckboxState);
  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['data-theme']
  });
</script>
