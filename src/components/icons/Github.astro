---
import { APP_CONFIG } from '../../types/settings';
import GithubSvg from './GithubSvg.astro';
---

<!-- GitHub 链接 -->
<a
href={APP_CONFIG.GITHUB_REPO}
target="_blank"
rel="noopener noreferrer"
class="text-base-content/60 hover:text-base-content transition-colors duration-200"
aria-label="访问项目 GitHub 仓库（新窗口打开）">
    <GithubSvg size={24} color="currentColor" />
</a>