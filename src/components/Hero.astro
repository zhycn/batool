---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = '工具快速索引',
  description = '精选工具 · 搜索即达 · 点击即达'
} = Astro.props;
---

<!-- 标题 - Linear 风格：精致简洁 -->
<h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-base-content tracking-tight mb-2.5">
  {title}
</h1>
<p class="text-base-content/40 text-sm sm:text-base mb-8 sm:mb-10 font-normal">
  {description}
</p>