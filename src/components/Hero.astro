---
import SearchBox from './SearchBox.astro';

interface Props {
  toolCount?: number;
  license?: string;
  heroTitle?: string;
  heroSubtitle?: string;
}

const {
  toolCount = 0,
  license = 'MIT License',
  heroTitle = '开发者的极简工具入口',
  heroSubtitle = '快速找到并直达工具官网，零干扰',
} = Astro.props;
---

<!-- Hero 内容区域 - 左右两栏布局 -->
<div class="flex flex-col items-center justify-center gap-10 py-8 lg:flex-row">
  <div class="w-full flex-1 text-center">
    <!-- 标签区域 -->
    <div class="mb-6 flex flex-wrap items-center justify-center gap-3">
      <span class="badge badge-soft badge-secondary">{toolCount} tools</span>
      <span class="badge badge-soft badge-info">{license}</span>
    </div>

    <!-- Hero 标题 -->
    <h1
      class="text-base-content mb-6 text-[clamp(40px,6vw,64px)] leading-[1.1] font-black tracking-tight"
    >
      {heroTitle}
    </h1>

    <!-- 副标题 -->
    <p class="text-base-content/70 mb-8 text-lg leading-relaxed sm:text-xl">
      {heroSubtitle}
    </p>

    <SearchBox />
  </div>
</div>
