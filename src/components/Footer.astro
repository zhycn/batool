const currentYear = new Date().getFullYear();
---

<!-- Footer -->
<footer class="w-full border-t border-base-content/5 bg-base-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4 py-6 text-xs text-base-content/60">
            <div class="flex items-center">
                Copyright © {currentYear} Batool
            </div>
            <div class="flex items-center gap-1">
                <span>Built with</span>
                <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="link link-hover hover:text-base-content/60 transition-colors duration-200">Astro</a>
                <span class="mx-1">·</span>
                <a href="https://daisyui.com" target="_blank" rel="noopener noreferrer" class="link link-hover hover:text-base-content/60 transition-colors duration-200">DaisyUI</a>
                <span class="mx-1">·</span>
                <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="link link-hover hover:text-base-content/60 transition-colors duration-200">TailwindCSS</a>
            </div>
        </div>
    </div>
</footer>
