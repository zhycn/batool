---
import { APP_CONFIG } from '../../types/settings';
const { name = APP_CONFIG.APP_NAME } = Astro.props;
---

<!-- 品牌标识区域: Logo + 站点名称 -->
<a href="/" class="flex items-center gap-2 group" title={name} aria-label="返回首页">
    <img src="/favicon.svg" alt={name} class="w-6 h-6" />
    <span class="text-lg font-bold text-base-content/90 tracking-tight">{name}</span>
</a>