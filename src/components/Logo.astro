---
import { APP_CONFIG } from '../types/settings';

interface Props {
  appName?: string;
}

const { appName = APP_CONFIG.APP_NAME } = Astro.props as Props;
---

<a href="/" class="group flex items-center gap-2" aria-label="返回首页">
  <img src="/favicon.svg" aria-hidden="true" class="h-7 w-7 sm:h-8 sm:w-8" />
  <span class="text-base-content text-xl font-bold tracking-tight sm:text-2xl"
    >{appName}</span
  >
</a>
