---
import { UI_CONFIG } from '../types/settings';

interface Props {
  searchQuery?: string;
}

const { searchQuery = '' } = Astro.props;
---

<!-- 搜索框 - Linear 风格：精致微妙 -->
<div class="max-w-4xl mx-auto mb-6 sm:mb-8">
  <div class="relative group">
    <input
      id="search-input"
      type="text"
      placeholder={UI_CONFIG.PLACEHOLDERS.SEARCH}
      autocomplete="off"
      class="search-input w-full px-4 sm:px-5 pr-24 sm:pr-28 py-3 sm:py-3.5 text-sm rounded-lg border border-base-content/10 bg-base-100 focus:border-base-content/20 focus:bg-base-100 focus:outline-none placeholder:text-base-content/30 transition-colors duration-150"
      style="transition-property: border-color, box-shadow, background-color;"
    />
    <div class="absolute right-3 sm:right-4 top-1/2 -translate-y-1/2 flex items-center gap-2">
      <!-- 清除按钮 - 有输入时显示 -->
      <button
        id="clear-search"
        type="button"
        class="hidden p-1.5 rounded-md hover:bg-base-content/5 text-base-content/30 hover:text-base-content/50 transition-colors duration-150"
        aria-label="清除搜索"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <kbd class="hidden md:inline-flex px-2 py-1 text-xs font-medium text-base-content/30 bg-base-content/5 rounded-md border border-base-content/5 transition-colors duration-150">⌘K</kbd>
    </div>
  </div>
</div>
