---
import { APP_CONFIG } from '../types/settings';
import Logo from './Logo.astro';
import ToggleTheme from './ToggleTheme.astro';
import Hero from './Hero.astro';

interface Props {
  toolCount?: number;
}

const { toolCount = 0 } = Astro.props;
---

<!--
  HeroHeader 组件 - Header 和 Hero 融合设计
  参考 heroicons 布局风格
  - 顶部独立导航块（Logo + 主题切换）
  - Hero 区域分为左右两栏
  - 背景图片覆盖整个区域
-->
<div class="border-base-content/10 w-full">
  <section class="relative w-full overflow-hidden">
    <!-- 内容区域 -->
    <div class="relative z-10 mx-auto w-full max-w-7xl px-6 lg:px-8">
      <!-- 顶部导航块 -->
      <div class="flex items-center justify-between pt-6">
        <!-- Logo + Batool -->
        <Logo />

        <!-- 主题切换按钮 + 链接列表 -->
        <div class="flex flex-wrap items-center justify-center gap-3">
          <ToggleTheme />
          <a
            href={APP_CONFIG.GITHUB_REPO}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-base-content/5 hover:bg-base-content/10 text-base-content/80 hover:text-base-content border-base-content/10 inline-flex items-center gap-2 rounded-lg border px-4 py-2 transition-all duration-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
            <span class="hidden text-sm font-medium md:inline-block"
              >GitHub</span
            >
          </a>

          <a
            href={`${APP_CONFIG.GITHUB_REPO}/issues`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-base-content/5 hover:bg-base-content/10 text-base-content/80 hover:text-base-content border-base-content/10 inline-flex items-center gap-2 rounded-lg border px-4 py-2 transition-all duration-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
              ></path>
            </svg>
            <span class="hidden text-sm font-medium md:inline-block"
              >提交工具</span
            >
          </a>
        </div>
      </div>

      <!-- Hero 内容区域 -->
      <Hero toolCount={toolCount} />
    </div>
  </section>
</div>
